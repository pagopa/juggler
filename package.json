{
  "private": true,
  "description": "Are you looking for a quick way to mock some endpoints given an open API? The Juggler can do what you are looking for.",
  "config": {
    "openapi": {
      "pn": {
        "deliveryURL": "https://github.com/pagopa/pn-delivery/raw/d499410/docs/openapi/api-external-b2b-pa-v1.yaml",
        "streamURL": "https://github.com/pagopa/pn-delivery-push/raw/a886f32/docs/openapi/api-external-b2b-webhook-v1.yaml"
      },
      "io": {
        "apiPublicURL": "https://github.com/pagopa/io-backend/raw/d7dc36b/openapi/generated/api_public.yaml"
      },
      "iosign": {
        "issuerURL": "https://github.com/pagopa/io-sign/raw/6a3d7b6/apps/io-func-sign-issuer/openapi.yaml"
      },
      "pagoPA": {
        "todoURL": "TODO"
      }
    }
  },
  "scripts": {
    "generate": "npm run generate:api -w ./packages/server",
    "clean": "npm run clean -ws",
    "compile": "npm run compile -ws",
    "lint": "eslint --ext .ts packages/",
    "lint:fix": "npm run lint -- --fix",
    "prettify": "prettier --write \"./**/*.ts\"",
    "start:client": "cd uidashboard && npm run start",
    "start": "npm run compile && concurrently -k \"PORT=8081 npm run start -w ./packages/server\" \"PORT=8080 npm run start -w ./packages/ui-dashboard\"",
    "start:pn": "OPENAPI_SPEC=$npm_package_config_openapi_pn_deliveryURL npm run start",
    "start:io": "OPENAPI_SPEC=$npm_package_config_openapi_io_apiPublicURL npm run start",
    "start:iosign": "OPENAPI_SPEC=$npm_package_config_openapi_iosign_issuerURL npm run start",
    "test": "DOTENV_CONFIG_PATH=./.env.default jest --setupFiles dotenv/config -i",
    "test:coverage": "npm run test -- --coverage",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pagopa/juggler.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/pagopa/juggler/issues"
  },
  "homepage": "https://github.com/pagopa/juggler#readme",
  "devDependencies": {
    "@pagopa/eslint-config": "^3.0.0",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.11.18",
    "concurrently": "^7.6.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.33.0",
    "husky": "^8.0.0",
    "jest": "^29.4.1",
    "jest-mock-extended": "^3.0.1",
    "prettier": "^2.8.3",
    "shx": "^0.3.4",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "fp-ts": "^2.13.1",
    "io-ts": "^2.2.20",
    "io-ts-types": "^0.5.19",
    "pino": "^8.8.0"
  },
  "workspaces": [
    "packages/*"
  ]
}
